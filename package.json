{
  "name": "mre-biome-watch-mode-with-vite-react-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check": "npx @biomejs/biome check --write .",
    "dev": "run-p dev:typecheck dev:server dev:biome",
    "dev:typecheck": "tsc -p tsconfig.app.json --watch --preserveWatchOutput",
    "dev:server": "vite --clearScreen=false",
    "dev:biome": "node --watch --watch-preserve-output --watch-path=. biome-dev.mjs",
    "build": "tsc -p tsconfig.app.json && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  }
}
